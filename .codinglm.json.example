{
  "apiKey": "${Z_AI_API_KEY}",
  "model": "glm-4.6",
  "apiBase": "https://api.z.ai/api/coding/paas/v4",
  "apiTimeoutMs": 600000,
  "temperature": 0.7,
  "maxTokens": 8192,
  "thinking": {
    "mode": "dynamic",
    "showReasoning": true
  },
  "mcpServers": {
    "browser-automation": {
      "command": "npx",
      "args": ["-y", "@automatalabs/mcp-server-playwright"]
    },
    "shell": {
      "command": "uvx",
      "args": ["mcp-server-shell"]
    }
  },
  "tools": {
    "autoApprove": [
      "Read",
      "Glob",
      "Grep",
      "Bash(ls*)",
      "Bash(git status)",
      "Bash(git diff)"
    ]
  },
  "ui": {
    "theme": "monokai",
    "showTimestamps": false,
    "compactMode": false
  },
  "context": {
    "compression": {
      "enabled": true,
      "maxContextTokens": 190000,
      "targetContextTokens": 170000,
      "preserveRecentMessages": 20,
      "summaryMaxTokens": 2000,
      "maxCompressionPasses": 3,
      "verbose": false
    }
  },
  "fileFiltering": {
    "respectGitIgnore": true,
    "respectContextIgnore": true,
    "customExcludes": [
      "**/*.tmp",
      "**/temp/**"
    ]
  }
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@codinglm/core": ["../core/src/index.ts"],
      "@codinglm/core/*": ["../core/src/*"]
    },
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "./package.json"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../core" }]
}
